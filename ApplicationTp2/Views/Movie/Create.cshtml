@model Movie

<div style="text-align: center;">
    <h1>Ajouter un nouveau film</h1>
</div>

<div style="text-align: center;">
    <form method="Post">
        <label for="Name">Nom du film:</label><br>
        <input type="text" id="Name" name="Name" placeholder="Entrez le nom du film"><br><br>
        <button type="submit" style="padding: 8px 12px; background-color: #28a745; color: #fff; border: none; border-radius: 4px; cursor: pointer;">Ajouter</button>
    </form>

    <a href="@Url.Action("Index", "Movie")" style="text-decoration: none; color: #28a745; margin-top: 10px; display: block;">Retour à la liste des films</a>
</div>
